{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [
    "Web",
    "Blazor",
    "Code"
  ],
  "identity": "Dimodi.Telerik.Blazor.GridEditing",
  "name": "Telerik Blazor Grid Editing",
  "shortName": "dimodi-grid-edit",
  "sourceName": "GridEditingPage",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "symbols": {
    "edit-mode": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Inline",
      "description": "Select the Grid edit mode, which affects the editing UI and UX",
      "displayName": "Edit Mode",
      "choices": [
        {
          "choice": "Inline",
          "description": "Inline edit mode with command buttons"
        },
        {
          "choice": "Popup",
          "description": "Popup edit mode with command buttons"
        },
        {
          "choice": "Incell",
          "description": "Incell edit mode without command buttons, except for delete operations"
        }
      ],
      "replaces": "{TVAR_EDITMODE}"
    },
    "validation": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Whether to use DataAnnotations validation in edit mode",
      "defaultValue": "false",
      "displayName": "Enable Validation"
    }
  }
}