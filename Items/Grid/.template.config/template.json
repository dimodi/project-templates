{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [
    "Web",
    "Blazor",
    "Code"
  ],
  "identity": "Dimodi.Telerik.Blazor.Grid",
  "name": "Telerik Blazor Grid",
  "shortName": "dimodi-grid",
  "sourceName": "GridPage",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "symbols": {
    "datasource": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Data",
      "description": "How the component will receive its data",
      "displayName": "Data Binding Mechanism",
      "choices": [
        {
          "choice": "Data",
          "description": "Bind with Data parameter"
        },
        {
          "choice": "OnRead",
          "description": "Bind with OnRead event"
        }
      ]
    },
    "edit-mode": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "None",
      "description": "Select the Grid edit mode, which affects the editing UI and UX",
      "displayName": "Edit Mode",
      "choices": [
        {
          "choice": "None",
          "description": "Editing is disabled"
        },
        {
          "choice": "Inline",
          "description": "Inline edit mode with command buttons"
        },
        {
          "choice": "Popup",
          "description": "Popup edit mode with command buttons"
        },
        {
          "choice": "Incell",
          "description": "Incell edit mode without command buttons, except for delete operations"
        }
      ],
      "replaces": "{TVAR_EDITMODE}"
    },
    "validation": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Whether to use DataAnnotations validation in edit mode",
      "defaultValue": "false",
      "displayName": "Enable Validation"
    },
    "selection": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Allow users to select one or multiple rows",
      "displayName": "Enable Row Selection"
    },
    "grouping": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Allow users to group and ungroup the data",
      "displayName": "Enable Grouping"
    }
  }
}