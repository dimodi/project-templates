{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [ "Web", "Blazor", "WebAssembly" ],
  "identity": "Dimodi.Telerik.Blazor.WebAssembly.Standalone",
  "name": "Telerik Blazor WebAssembly Standalone App",
  "shortName": "dimodi-blazorwasm",
  "description": "Blazor WebAssembly Standalone App with Telerik Blazor components installed",
  "sourceName": "TelerikBlazorWasmStandalone",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "guids": [
    "FAE04EC0-301F-11D3-BF4B-00C04F79EFBC",
    "C10C311B-98E5-4EAF-860D-D053C9B69C8B"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [{
          "choice": "net8.0",
          "description": "Target .NET 8.0"
      },{
        "choice": "net9.0",
        "description": "Target .NET 9.0"
    }],
      "replaces": "{TVAR_NETVERSION}",
      "defaultValue": "net9.0"
    },
    "theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "cdn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN",
      "displayName": "Use Telerik CDN"
    },
    "icon-type": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the Telerik icon type",
      "displayName": "Global Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "rtl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support",
      "displayName": "Enable RTL"
    }
  }
}
