{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [
    "Web",
    "Blazor",
    "WebAssembly"
  ],
  "identity": "Dimodi.Telerik.Blazor.WebAssembly.Standalone",
  "name": "Telerik Blazor WebAssembly Standalone App",
  "defaultName": "TelerikBlazorApp",
  "shortName": "dimodi-blazorwasm",
  "description": "Blazor WebAssembly Standalone App with Telerik Blazor components installed",
  "sourceName": "TelerikBlazorWasmStandalone",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "net9.0",
      "description": "The target framework for the project.",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        }
      ],
      "replaces": "{TVAR_NETVERSION}"
    },
    "framework-number": {
      "type": "generated",
      "generator": "switch",
      "parameters": {
        "datatype": "text",
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(Framework == \"net8.0\")",
            "value": "8"
          },
          {
            "condition": "",
            "value": "9"
          }
        ]
      },
      "replaces": "{TVAR_NETNUMBER}"
    },
    "telerik-version": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "8.1.1",
      "description": "Select the Telerik UI for Blazor version.",
      "displayName": "Telerik UI for Blazor version",
      "choices": [
        {
          "choice": "*",
          "displayName": "latest as wildcard (no CDN)"
        },
        {
          "choice": "8.1.1",
          "displayName": "8.1.1"
        },
        {
          "choice": "7.1.0",
          "displayName": "7.1.0"
        }
      ],
      "replaces": "{TVAR_TELERIKVERSION}"
    },
    "theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme.",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "dark-mode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load the dark swatch of the Telerik CSS theme. Requires CDN.",
      "displayName": "Dark Mode (requires CDN)"
    },
    "theme-suffix": {
      "type": "generated",
      "generator": "switch",
      "parameters": {
        "datatype": "text",
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(dark-mode)",
            "value": "-dark"
          },
          {
            "condition": "",
            "value": ""
          }
        ]
      },
      "replaces": "{TVAR_THEMESUFFIX}"
    },
    "cdn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN.",
      "displayName": "Use Telerik CDN"
    },
    "icon-type": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the global Telerik icon type which affects internally rendered icons in all components.",
      "displayName": "Telerik Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "localization": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Telerik resource localization.",
      "displayName": "Enable Localization"
    },
    "rtl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support.",
      "displayName": "Enable RTL"
    },
    "docker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add configuration to publish and run the app in a Docker container",
      "displayName": "Add Dockerfile"
    },
    "kestrel-https-port": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 7777
      },
      "replaces": "{TVAR_HTTPSPORT}"
    },
    "kestrel-https-port2": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 5555
      },
      "replaces": "{TVAR_HTTPSPORT2}"
    },
    "kestrel-http-port": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 4444
      },
      "replaces": "{TVAR_HTTPPORT}"
    },
    "docker-user-secrets-id": {
      "type": "generated",
      "generator": "guid",
      "replaces": "{TVAR_DOCKERUSERSECRETSID}"
    },
    "HostIdentifier": {
      "type": "bind",
      "binding": "host:HostIdentifier"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"
      ],
      "modifiers": [
        {
          "condition": "(localization == false)",
          "exclude": [
            "**/Layout/CultureSelector.razor",
            "**/Resources/**",
            "**/Services/**"
          ]
        },
        {
          "rename": {
            "dockerignore.dockerignore": ".dockerignore"
          }
        },
        {
          "condition": "(docker == false)",
          "exclude": [
            "**/Dockerfile",
            "**/NuGet_Deploy.Config",
            "**/dockerignore.dockerignore",
            "**/.dockerignore",
            "**/nginx.conf"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "**/Pages/Home.razor"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "TelerikBlazorWasmStandalone.csproj"
    }
  ],
  "postActions": [
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "description": "Open Home.razor",
      "continueOnError": false,
      "manualInstructions": [],
      "args": {
        "files": "0"
      }
    }
  ]
}