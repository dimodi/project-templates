{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [
    "Web",
    "Blazor",
    "WebAssembly"
  ],
  "identity": "Dimodi.Telerik.Blazor.WebAssembly.Standalone",
  "name": "Telerik Blazor WebAssembly Standalone App",
  "defaultName": "TelerikBlazorApp",
  "shortName": "dimodi-blazorwasm",
  "description": "Blazor WebAssembly Standalone App with Telerik Blazor components installed",
  "sourceName": "TelerikBlazorWasmStandalone",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "net8.0",
      "description": "The target framework for the project.",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        },
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        }
      ],
      "replaces": "{TVAR_NETVERSION}"
    },
    "FrameworkNumber": {
      "type": "generated",
      "generator": "switch",
      "parameters": {
        "datatype": "int",
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(Framework == \"net10.0\")",
            "value": "10"
          },
          {
            "condition": "(Framework == \"net9.0\")",
            "value": "9"
          },
          {
            "condition": "",
            "value": "8"
          }
        ]
      },
      "replaces": "{TVAR_NETNUMBER}"
    },
    "FrameworkSuffix": {
      "type": "generated",
      "generator": "switch",
      "parameters": {
        "datatype": "text",
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(Framework == \"net10.0\")",
            "value": "0.0-preview."
          },
          {
            "condition": "",
            "value": ""
          }
        ]
      },
      "replaces": "{TVAR_NETSUFFIX}"
    },
    "TelerikVersion": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "9.1.0",
      "description": "Select the Telerik UI for Blazor version.",
      "displayName": "Telerik UI for Blazor version",
      "choices": [
        {
          "choice": "*",
          "displayName": "latest as wildcard (no CDN)"
        },
        {
          "choice": "9.1.0",
          "displayName": "9.1.0"
        },
        {
          "choice": "8.1.1",
          "displayName": "8.1.1"
        },
        {
          "choice": "7.1.0",
          "displayName": "7.1.0"
        }
      ],
      "replaces": "{TVAR_TELERIKVERSION}"
    },
    "Theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme.",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "DarkMode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load the dark swatch of the Telerik CSS theme. Requires CDN.",
      "displayName": "Dark Mode (requires CDN)"
    },
    "ThemeSuffix": {
      "type": "generated",
      "generator": "switch",
      "parameters": {
        "datatype": "text",
        "evaluator": "C++",
        "cases": [
          {
            "condition": "(DarkMode)",
            "value": "-dark"
          },
          {
            "condition": "",
            "value": ""
          }
        ]
      },
      "replaces": "{TVAR_THEMESUFFIX}"
    },
    "CDN": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN.",
      "displayName": "Use Telerik CDN"
    },
    "IconType": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the global Telerik icon type which affects internally rendered icons in all components.",
      "displayName": "Telerik Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "Localization": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Telerik resource localization.",
      "displayName": "Enable Localization"
    },
    "RTL": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support.",
      "displayName": "Enable RTL"
    },
    "AddDPLPackages": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add Telerik NuGet packages for creating and editing CSV, DOCX, HTML, PDF and XLSX files.",
      "displayName": "Add Telerik Document Processing Packages"
    },
    "Docker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add configuration to publish and run the app in a Docker container",
      "displayName": "Add Dockerfile"
    },
    "KestrelHttpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 7777
      },
      "replaces": "{TVAR_HTTPSPORT}"
    },
    "KestrelHttpsPort2": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 5555
      },
      "replaces": "{TVAR_HTTPSPORT2}"
    },
    "KestrelHttpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "high": 9999,
        "low": 1024,
        "fallback": 4444
      },
      "replaces": "{TVAR_HTTPPORT}"
    },
    "DockerUserSecretsId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "{TVAR_DOCKERUSERSECRETSID}"
    },
    "HostIdentifier": {
      "type": "bind",
      "binding": "host:HostIdentifier",
      "defaultValue": ""
    },
    "UseDotNetCli": {
      "type": "computed",
      "value": "(HostIdentifier == \"dotnetcli\" || HostIdentifier == \"dotnetcli-preview\")"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"
      ],
      "modifiers": [
        {
          "condition": "(!Localization)",
          "exclude": [
            "**/Layout/CultureSelector.razor",
            "**/Resources/**",
            "**/Services/**"
          ]
        },
        {
          "rename": {
            "dockerignore.dockerignore": ".dockerignore"
          }
        },
        {
          "condition": "(!Docker)",
          "exclude": [
            "**/Dockerfile",
            "**/NuGet_Deploy.Config",
            "**/dockerignore.dockerignore",
            "**/.dockerignore",
            "**/nginx.conf"
          ]
        },
        {
          "condition": "(FrameworkNumber < 10)",
          "exclude": [
            "**/Pages/NotFound.razor"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "condition": "(!UseDotNetCli)",
      "path": "Pages/Home.razor"
    },
    {
      "path": "TelerikBlazorWasmStandalone.csproj"
    }
  ],
  "postActions": [
    {
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true,
      "description": "Restore NuGet packages",
      "manualInstructions": [
        {
          "text": "Run dotnet restore"
        }
      ]
    },
    {
      "condition": "(!UseDotNetCli)",
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "description": "Open Home.razor",
      "continueOnError": true,
      "manualInstructions": [],
      "args": {
        "files": "0"
      }
    }
  ]
}