{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [ "Web", "Blazor", "WebAssembly" ],
  "identity": "Dimodi.Telerik.Blazor.WebApp.WebAssemblyAuto",
  "name": "Telerik Blazor WebAssembly or Auto Web App",
  "shortName": "dimodi-blazor-wasmauto",
  "description": "Blazor Web App with global interactive WebAssembly or Auto render mode, and Telerik Blazor components installed",
  "sourceName": "TelerikBlazorWasm",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [{
          "choice": "net8.0",
          "description": "Target .NET 8.0"
      },{
        "choice": "net9.0",
        "description": "Target .NET 9.0"
    }],
      "replaces": "{TVAR_NETVERSION}",
      "defaultValue": "net8.0"
    },
    "render-mode": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "WebAssembly",
      "description": "Select the global Blazor render mode (interactivity)",
      "displayName": "Interactive Render Mode",
      "choices": [
        {
          "choice": "Auto",
          "description": "Auto (Server and WebAssembly)"
        },
        {
          "choice": "WebAssembly",
          "description": "WebAssembly only"
        }
      ],
      "replaces": "{TVAR_RENDERMODE}"
    },
    "theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "cdn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN",
      "displayName": "Use Telerik CDN"
    },
    "icon-type": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the Telerik icon type",
      "displayName": "Global Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "rtl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support",
      "displayName": "Enable RTL"
    }
  }
}
