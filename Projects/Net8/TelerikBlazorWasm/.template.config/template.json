{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [ "Web", "Blazor", "WebAssembly" ],
  "identity": "Dimodi.Telerik.Blazor.WebApp.WebAssemblyAuto",
  "name": "Telerik Blazor Web App (WebAssembly or Auto)",
  "shortName": "dimodi-blazor-wasmauto",
  "description": "Blazor Web App with global interactive WebAssembly or Auto render mode, and Telerik Blazor components installed",
  "sourceName": "TelerikBlazorWasm",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "guids": [
    "9A19103F-16F7-4668-BE54-9A1E7A4F7556",
    "27EC6E1B-25F1-4610-848C-816BA6C5DCFD",
    "99CEE179-E2E4-40F9-B4D0-3055CE52699B",
    "10E9231B-C208-4707-B24C-735A779D09F0"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [{
          "choice": "net8.0",
          "description": "Target .NET 8.0"
      },{
        "choice": "net9.0",
        "description": "Target .NET 9.0"
    }],
      "replaces": "{TVAR_NETVERSION}",
      "defaultValue": "net9.0"
    },
    "render-mode": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "WebAssembly",
      "description": "Select the global Blazor render mode (interactivity)",
      "displayName": "Interactive Render Mode",
      "choices": [
        {
          "choice": "Auto",
          "description": "Auto (Server and WebAssembly)"
        },
        {
          "choice": "WebAssembly",
          "description": "WebAssembly"
        }
      ],
      "replaces": "{TVAR_RENDERMODE}"
    },
    "theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "cdn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN",
      "displayName": "Use Telerik CDN"
    },
    "icon-type": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the Telerik icon type",
      "displayName": "Global Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "rtl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support",
      "displayName": "Enable RTL"
    },
    "form-body-length": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "128",
      "description": "Increase the Form MultipartBodyLengthLimit. Relevant to the Upload component.",
      "displayName": "Max Form Body Length (MB)",
      "replaces": "{TVAR_FORMBODY}"
    },
    "kestrel-request-size": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "28",
      "description": "Increase the Kestrel MaxRequestBodySize. Relevant to the Upload component.",
      "displayName": "Max Kestrel Request Body Size (MB)",
      "replaces": "{TVAR_KESTRELREQUEST}"
    }
  }
}
