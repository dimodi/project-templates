@inherits LayoutComponentBase
@layout TelerikLayout

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
@*#if (Localization)
            <CultureSelector />
##endif*@
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a
    <span class="dismiss">🗙</span>
</div>
@*#if (UseWebAssembly && (FrameworkNumber == "8" || CDN)) -->

@code {
    public static string GetTelerikUiForBlazorVersion()
    {
        string telerikBlazorAssemblyVersion = typeof(TelerikRootComponent).Assembly.GetName().Version?.ToString() ?? "0.0.0.0";
        int lastDotIndex = telerikBlazorAssemblyVersion.LastIndexOf(".");
        return telerikBlazorAssemblyVersion.Substring(0, lastDotIndex);
    }
}
##endif*@
