{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dimo Dimov",
  "classifications": [ "Web", "Blazor" ],
  "identity": "Dimodi.Telerik.Blazor.WebApp.Server",
  "name": "Telerik Blazor Web App (Server)",
  "shortName": "dimodi-blazor-server",
  "description": "Blazor Web App with global interactive Server render mode, and Telerik Blazor components installed",
  "sourceName": "TelerikBlazorServer",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "guids": [
    "FAE04EC0-301F-11D3-BF4B-00C04F79EFBC",
    "3F047879-D472-41B7-86B6-61FB2D0083F6",
    "B4DCBEA3-B740-4931-82BB-F3583E1C2230"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [{
          "choice": "net8.0",
          "description": "Target .NET 8.0"
      },{
        "choice": "net9.0",
        "description": "Target .NET 9.0"
    }],
      "replaces": "{TVAR_NETVERSION}",
      "defaultValue": "net9.0"
    },
    "render-mode": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Server",
      "description": "Select the global Blazor render mode (interactivity)",
      "displayName": "Interactive Render Mode",
      "choices": [
        {
          "choice": "Server",
          "description": "Server"
        }
      ],
      "replaces": "{TVAR_RENDERMODE}"
    },
    "theme": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "default",
      "description": "Select the Telerik theme",
      "displayName": "Telerik Theme",
      "choices": [
        {
          "choice": "default",
          "displayName": "Default"
        },
        {
          "choice": "bootstrap",
          "displayName": "Bootstrap"
        },
        {
          "choice": "material",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "displayName": "Fluent"
        }
      ],
      "replaces": "{TVAR_THEME}"
    },
    "cdn": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Load Telerik CSS and JS files from CDN",
      "displayName": "Use Telerik CDN"
    },
    "icon-type": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "Svg",
      "description": "Select the Telerik icon type",
      "displayName": "Global Icon Type",
      "choices": [
        {
          "choice": "Svg",
          "displayName": "SVG",
          "description": "SVG Icons"
        },
        {
          "choice": "Font",
          "description": "Font Icons"
        }
      ],
      "replaces": "{TVAR_ICONTYPE}"
    },
    "rtl": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Enable Right-to-Left support",
      "displayName": "Enable RTL"
    },
    "signalr-message-size": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "32",
      "description": "Increase the max SignalR message size. Recommended for the Editor, FileManager, FileSelect, PDF Viewer, and Signature components.",
      "displayName": "Max SignalR Message Size (KB)",
      "replaces": "{TVAR_SIGNALRMESSAGE}"
    },
    "form-body-length": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "128",
      "description": "Increase the Form MultipartBodyLengthLimit. Relevant to the Upload component.",
      "displayName": "Max Form Body Length (MB)",
      "replaces": "{TVAR_FORMBODY}"
    },
    "kestrel-request-size": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "28",
      "description": "Increase the Kestrel MaxRequestBodySize. Relevant to the Upload component.",
      "displayName": "Max Kestrel Request Body Size (MB)",
      "replaces": "{TVAR_KESTRELREQUEST}"
    }
  }
}
