<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Dimo Dimov</Authors>
    <ContentTargetFolders>content</ContentTargetFolders>
    <Copyright>Copyright (c) Dimo Dimov 2024</Copyright>
    <Description>Blazor templates that include Telerik UI for Blazor</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IncludeContentInPack>true</IncludeContentInPack>
    <NoWarn>$(NoWarn);NU5128;NU5119</NoWarn>
    <PackageId>Dimodi.Telerik.Blazor.Templates</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/dimodi/project-templates</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>

      Breaking changes:
      * Renamed the CLI option names

      Features:
      N/A

      Fixes:
      * Referenced .NET 9 RC NuGet packages explicitly
      * Referenced a newer System.Private.Uri version to avoid a vulnerability

      See https://github.com/dimodi/project-templates/releases for release notes for all versions

    </PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>dotnet-new;templates</PackageTags>
    <PackageType>Template</PackageType>
    <RepositoryUrl>https://github.com/dimodi/project-templates</RepositoryUrl>
    <Title>Telerik Blazor Project Templates</Title>
    <Version>3.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="**\*" />
    <Content Include="Items\**\*;Projects\Net*\**\*" Exclude="Projects\Net*\**\bin\**;Projects\Net*\**\obj\**" />
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>